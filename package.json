{
  "name": "hijack",
  "version": "0.1.0",
  "bin": {
    "hj": "./bin/hj"
  },
  "description": "A tool for hijacking another npm module's build system.",
  "main": "dist/index.cjs.js",
  "esnext": "dist/index.esm.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:bin",
    "build:bin": "rollup src/bin.js -o dist/hj.js -f cjs",
    "build:cjs": "rollup src/index.js -o dist/index.cjs.js -f cjs",
    "build:esm": "rollup src/index.js -o dist/index.esm.js -f esm",
    "test": "jest"
  },
  "keywords": [
    "hijack",
    "builds"
  ],
  "files": [
    "README.md",
    "dist",
    "bin"
  ],
  "author": "Allain Lalonde <allain.lalonde@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "rollup": "^1.17.0"
  },
  "dependencies": {
    "chokidar": "^3.0.2",
    "commander": "^2.20.0",
    "execa": "^2.0.3",
    "fs-extra": "^8.1.0",
    "pkg-dir": "^4.2.0",
    "sync-glob": "^1.4.0",
    "which": "^1.3.1"
  }
}
